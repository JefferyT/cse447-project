   "source": [
    "path = r'test'\n",
    "files = os.listdir(path)\n",
    "lines = []\n",
    "for f in files:\n",
    "    f_ = open(os.path.join(path, f), \"r\", encoding='utf-16')\n",
    "    curLines = f_.read().split('\\n')\n",
    "    curLines.pop()\n",
    "    lines += curLines\n",
    "    f_.close()"
